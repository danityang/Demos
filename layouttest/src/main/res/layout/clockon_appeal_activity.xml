<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/common_padding">

        <TextView
            android:id="@+id/tv_clockon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤日期"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/tv_clockon_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_toRightOf="@id/tv_clockon_date"
            android:hint="点击选择日期"
            android:text=""
            android:textColorHint="@color/common_hint_color"
            android:textSize="@dimen/common_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            android:id="@+id/tv_clockon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤时段"
            android:textSize="@dimen/common_text_size" />

        <CheckBox
            android:id="@+id/cb_clockon_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left" />

        <TextView
            android:id="@+id/tv_clock_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班"
            android:textSize="@dimen/common_text_size" />

        <CheckBox
            android:id="@+id/cb_clockon_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_left" />

        <TextView
            android:id="@+id/tv_clock_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下班"
            android:textSize="@dimen/common_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding">

        <TextView
            android:id="@+id/tv_appeal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申述类型"
            android:textSize="@dimen/common_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_mobify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_left" />

            <TextView
                android:id="@+id/tv_mobify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_mobify_time"
                android:text="更改考勤时间"
                android:textSize="@dimen/common_text_size" />

            <CheckBox
                android:id="@+id/cb_supply_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_mobify_time"
                android:layout_marginLeft="@dimen/common_margin_left" />

            <TextView
                android:id="@+id/tv_supply_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobify_time"
                android:layout_toRightOf="@id/cb_supply_sign"
                android:text="补签"
                android:textSize="@dimen/common_text_size" />

        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/appeal_reason"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/white"
        android:gravity="left"
        android:hint="请填写要申诉的原因"
        android:textColorHint="@color/common_hint_color" />

</LinearLayout>

